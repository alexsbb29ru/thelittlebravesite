@inherits ImgCarouselVm
<div class="media-block">
    <div class="screenshots-block">
        <div id="screenCarousel" class="carousel slide" data-bs-ride="carousel">
            <ol class="carousel-indicators">
                @for (var i = 0; i < Screenshots.Count; i++)
                {
                    if (i == 0)
                    {
                        
                        <li data-bs-target="#screenCarousel" data-bs-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-bs-target="#screenCarousel" data-bs-slide-to="@i"></li>
                    }
                }
            </ol>
            <div class="carousel-inner screen-carousel">
                @for (var i = 0; i < Screenshots.Count; i++)
                {
                    var screenshot = Screenshots[i];
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img src="@screenshot.MediumImgSrc" class="d-block w-100" alt="...">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="@screenshot.MediumImgSrc" class="d-block w-100" alt="...">
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#screenCarousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </a>
            <a class="carousel-control-next" href="#screenCarousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </a>
        </div>
    </div>
</div>